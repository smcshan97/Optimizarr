# Optimizarr Configuration
# Copy this file to .env and update with your values

# Security - CHANGE THESE!
OPTIMIZARR_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
OPTIMIZARR_ADMIN_USERNAME=admin
OPTIMIZARR_ADMIN_PASSWORD=change-this-secure-password

# Application
OPTIMIZARR_HOST=0.0.0.0
OPTIMIZARR_PORT=5000
OPTIMIZARR_LOG_LEVEL=INFO

# Database
OPTIMIZARR_DB_PATH=/app/data/optimizarr.db

# JWT Settings
OPTIMIZARR_JWT_EXPIRATION_HOURS=24

# Docker User Mapping
PUID=1000
PGID=1000
TZ=America/New_York
